cadastro = list()
aluno = list()

def menu():
    print("\n\n               |FADAM|\n")
    print('''- SISTEMA DE GERENCIAMENTO DO ALUNO -\n
    1 - Cadastrar Aluno
    2 - Buscar Aluno
    3 - Editar dados do Aluno
    4 - Excluir Aluno
    5 - Lançar Notas
    6 - Relatórios
    0 - Sair''')
    op= int(input("\nEscolha uma opção: "))
    if op == 1:
        add()
    elif op == 2:
        busca()
    #elif op == 3:
        #edit()
    #elif op == 4:
        #excluir()
    #elif op == 5:
        #notas()
    #elif op == 6:
        #relatorios()
    elif op == 0:
        print("Usuário deslogado do sistema...\nOBRIGADA!\n")
    return op

def add():
    matricula=str(input("Informe o número da matrícula: "))
    if aluno in cadastro:
        print("\nO Aluno já consta na lista!")
    else:
        nome=str(input("Informe o nome: "))
        telefone=str(input("Informe o telefone: "))
        endereco=str(input("Informe o endereço: "))
        aluno.append(matricula)
        aluno.append(nome)
        aluno.append(telefone)
        aluno.append(endereco)
        print("\nAluno cadastrado com sucesso!\n")
        print(aluno)
        #cadastro.append(aluno)
        #print(cadastro)
    
    pass 

def busca(aluno):
    matricula=str(input("Informe a matrícula: "))
    if matricula in aluno:
        print("\nAluno encontrado!\n")
        print(aluno)
    else:
        print("\nO aluno não se encontra na lista... Gentileza tentar novamente.\n")
    pass 

