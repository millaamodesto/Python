cadastro = [()]

def menu():
    print("\n               |FADAM|\n")
    print('''- SISTEMA DE GERENCIAMENTO DO ALUNO -\n
    1 - Cadastrar Aluno
    2 - Buscar Aluno
    3 - Editar dados do Aluno
    4 - Excluir Aluno
    5 - Lançar Notas
    6 - Relatórios
    0 - Sair''')
    op = int(input("\nEscolha uma opção:"))
    if op == 1:
        add()
    elif op == 2:
        busca()
    elif op == 0:
        print("Usuário deslogado do sistema...\nOBRIGADA!\n")
    return op

