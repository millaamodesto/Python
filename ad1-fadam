def add():
    matricula = str(input("Informe o número da matrícula: "))
    if cadastro == [()]:
        nome = str(input("Informe o nome:"))
        telefone = str(input("Informe o telefone: "))
        endereco = str(input("Informe o endereço: "))
    else:
        for Paluno in cadastro:
            for dados in Paluno.values():
                if matricula == dados:
                    print('Aluno já cadastrado :' + Paluno['aluno'] + ' ' + Paluno['matricula'])
    for i in range(0, len(cadastro)):
        aluno_i = {'matricula': matricula, 'nome': nome, 'telefone': telefone, 'endereco': endereco}
    cadastro = [(aluno_i)]
    print("Aluno cadastrado com sucesso!")
    print()
    print(f'Total de cadastros{len(cadastro)}')
    print(cadastro)

def busca():
    pass
